<Window x:Class="FinanceTracker.WPF.CategoryNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinanceTracker.WPF"
        mc:Ignorable="d"
        Title="Category Name" Height="200" Width="300" ResizeMode="NoResize" SizeToContent="Height">
    <StackPanel>
        <TextBlock Text="Category Name" Margin="10"/>
        <TextBox Text="{Binding CategoryName}" Margin="10"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="OK" Click="ButtonOK_Click" Margin="5"/>
            <Button Grid.Column="1" Content="Cancel" Click="ButtonCancel_Click" Margin="5"/>
        </Grid>
    </StackPanel>
</Window>
