<Window x:Class="FinanceTracker.WPF.AddBalanceTransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinanceTracker.WPF"
        mc:Ignorable="d"
        Title="Update Balance" Height="200" Width="300" ResizeMode="NoResize" SizeToContent="Height">
    <StackPanel>
        <DatePicker SelectedDate="{Binding Date}" Margin="10"/>
        <TextBox Text="{Binding Value}" Margin="10"/>
        <Button Content="Okay" Click="Button_Click" Margin="10"/>
    </StackPanel>
</Window>
